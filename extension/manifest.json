{
  "manifest_version": 2,
  "name": "Scheduled Tabs",
  "short_name": "Schedule Tab",
  "description": "Opens new tabs at scheduled times.",
  "version": "0.0.1",
  "homepage_url": "https://github.com/mjdease/scheduled-tabs-extension",

  "permissions": [
    "alarms",
    "storage",
    "tabs"
  ],

  "icons": {
    "16": "/icons/alarm/alarm_16.png",
    "19": "/icons/alarm/alarm_19.png",
    "32": "/icons/alarm/alarm_32.png",
    "38": "/icons/alarm/alarm_38.png",
    "48": "/icons/alarm/alarm_48.png",
    "96": "/icons/alarm/alarm_96.png",
    "128": "/icons/alarm/alarm_128.png"
  },

  "background" : {
    "scripts": ["dist/background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "/icons/alarm_add/alarm_add_16.png",
      "19": "/icons/alarm_add/alarm_add_19.png",
      "32": "/icons/alarm_add/alarm_add_32.png",
      "38": "/icons/alarm_add/alarm_add_38.png",
      "48": "/icons/alarm_add/alarm_add_48.png",
      "96": "/icons/alarm_add/alarm_add_96.png",
      "128": "/icons/alarm_add/alarm_add_128.png"
    },
    "default_title": "Scheduled Tabs",
    "default_popup": "popup.html"
  }
}
